                            <td>₡5,000</td>
                            <td>
                                <button class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#verOrdenModal">Ver</button>
                                <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmarAnulacionModal">Anular</button>
                                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#enviarCorreoModal">Enviar</button>
