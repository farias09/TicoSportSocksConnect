    <!-- Modal para nueva orden -->
    <div class="modal fade" id="nuevaOrdenModal" tabindex="-1" aria-labelledby="nuevaOrdenModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="nuevaOrdenModalLabel">Nueva Orden de Compra</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Formulario para capturar datos de la nueva orden -->
                    <form>
                        <div class="mb-3">
                            <label for="proveedor" class="form-label">Proveedor</label>
                            <input type="text" class="form-control" id="proveedor" placeholder="Ingrese el nombre del proveedor">
                        </div>
                        <div class="mb-3">
                            <label for="productos" class="form-label">Productos</label>
                            <textarea class="form-control" id="productos" rows="3" placeholder="Detalle los productos"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="total" class="form-label">Total</label>
                            <input type="number" class="form-control" id="total" placeholder="Total de la orden">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Guardar Orden</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para consultar órdenes -->
    <div class="modal fade" id="consultarOrdenesModal" tabindex="-1" aria-labelledby="consultarOrdenesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="consultarOrdenesModalLabel">Órdenes Recientes</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Tabla con datos ficticios -->
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th># Orden</th>
                                    <th>Cliente</th>
                                    <th>Estado</th>
                                    <th>Fecha</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>001</td>
                                    <td>María López</td>
                                    <td><span class="badge bg-success">Confirmado</span></td>
                                    <td>01/12/2024</td>
                                    <td>₡45,000</td>
                                </tr>
                                <tr>
                                    <td>002</td>
                                    <td>Juan Pérez</td>
                                    <td><span class="badge bg-warning">Pendiente</span></td>
                                    <td>02/12/2024</td>
                                    <td>₡15,000</td>
                                </tr>
                                <tr>
                                    <td>003</td>
                                    <td>Venta Directa</td>
                                    <td><span class="badge bg-danger">Anulado</span></td>
                                    <td>03/12/2024</td>
                                    <td>₡0</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

        <!-- Modal para Órdenes Recurrentes -->
        <div class="modal fade" id="ordenesRecurrentesModal" tabindex="-1" aria-labelledby="ordenesRecurrentesModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ordenesRecurrentesModalLabel">Configurar Órdenes Recurrentes</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Formulario para configurar órdenes recurrentes -->
                        <form>
                            <!-- Selección de productos -->
                            <div class="mb-3">
                                <label for="productoRecurrente" class="form-label">Producto</label>
                                <input type="text" class="form-control" id="productoRecurrente" placeholder="Ingresa el SKU o nombre del producto">
                            </div>

                            <!-- Cantidad -->
                            <div class="mb-3">
                                <label for="cantidadRecurrente" class="form-label">Cantidad</label>
                                <input type="number" class="form-control" id="cantidadRecurrente" placeholder="Cantidad">
                            </div>

                            <!-- Frecuencia -->
                            <div class="mb-3">
                                <label for="frecuenciaRecurrente" class="form-label">Frecuencia</label>
                                <select class="form-select" id="frecuenciaRecurrente">
                                    <option value="diaria">Diaria</option>
                                    <option value="semanal">Semanal</option>
                                    <option value="mensual">Mensual</option>
                                </select>
                            </div>

                            <!-- Fechas de inicio y fin -->
                            <div class="mb-3">
                                <label for="fechaInicio" class="form-label">Fecha de Inicio</label>
                                <input type="date" class="form-control" id="fechaInicio">
                            </div>
                            <div class="mb-3">
                                <label for="fechaFin" class="form-label">Fecha de Fin (opcional)</label>
                                <input type="date" class="form-control" id="fechaFin">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <a href="/Factura/Index" class="btn btn-success">Guardar Configuración</a>
                    </div>

                </div>
            </div>
        </div>

        <!-- Modal para ver detalles de la orden -->
        <div class="modal fade" id="verOrdenModal" tabindex="-1" aria-labelledby="verOrdenModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="verOrdenModalLabel">Detalles de la Orden #1039</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
