@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <title>Pricing | Clivax - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Codebucks" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">


    <!-- dark layout js -->
    <script src="~/js/pages/layout.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    <link rel="stylesheet" href="~/css/icons.css" />

</head>

<body>

    <!-- Begin page -->
    <div id="layout-wrapper">

        <!-- start page title -->
        <div class="container mt-4">
            <div class="text-center mb-4">
                <h1>Gestión de órdenes</h1>
                <p class="text-muted">Gestiona las órdenes que recibe Tico Sport Socks</p>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ventaFisicaModal">Registrar Venta Física</button>
            </div>
        </div>
        <div class="container mt-4">
            <div class="row">
                <!-- Panel de conversaciones -->
                <div class="col-md-4">
                    <div class="card" style="height: 730px;">
                        <div class="card-header bg-white">
                            <h5 class="card-title">Conversaciones</h5>
                            <div class="d-flex justify-content-between">
                            </div>
                        </div>
                        <div class="card-body">
                            <h6>Pendientes (5)</h6>
                            <div class="list-group">
                                <button class="list-group-item list-group-item-action">
                                    <strong>Marina López Sandí</strong>
                                    <p class="mb-0 text-muted">Estoy interesada en unas espinilleras...</p>
                                </button>
                                <button class="list-group-item list-group-item-action">
                                    <strong>Daniel Ramírez</strong>
                                    <p class="mb-0 text-muted">Quiero pagar con transferencia...</p>
                                </button>
                                <button class="list-group-item list-group-item-action">
                                    <strong>Dany Hernández</strong>
                                    <p class="mb-0 text-muted">Hola, estoy interesada en la licra...</p>
                                </button>
                                <button class="list-group-item list-group-item-action">
                                    <strong>Pablo López</strong>
                                    <p class="mb-0 text-muted">Tienen espinilleras?...</p>
                                </button>
                                <button class="list-group-item list-group-item-action">
                                    <strong>Brians Vargas</strong>
                                    <p class="mb-0 text-muted">A cuanto salen las...</p>
                                </button>
                                <button class="list-group-item list-group-item-action">
                                    <strong>Juan Artavia</strong>
                                    <p class="mb-0 text-muted">Cuando recibo mi pedido?...</p>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Chat -->
                <div class="card" style="height: 733px; width: 400px; overflow-y: auto; border: 1px solid #ddd; border-radius: 8px;">
                    <div class="card-header bg-white text-center" style="border-bottom: 1px solid #ddd;">
                        <h5 class="card-title">Chat - Fabian Arias Artavia</h5>
                    </div>
                    <div class="card-body" style="padding: 10px;">
                        <!-- Usuario -->
                        <div class="d-flex mb-3">
                            <div class="p-3 rounded bg-primary text-white" style="max-width: 70%; margin-right: auto; word-wrap: break-word;">
                                <p class="mb-0"><strong>Fabian:</strong> Hola, tienen medias antideslizantes blancas?</p>
                                <small class="text-white-50">14:26</small>
                            </div>
                        </div>
                        <!-- Sistema -->
                        <div class="d-flex mb-3">
                            <div class="p-3 rounded bg-light" style="max-width: 70%; margin-left: auto; word-wrap: break-word;">
                                <p class="mb-0"><strong>Sistema:</strong> Hola! Sí, están disponibles y cuestan ¢5.400.</p>
                                <small class="text-muted">14:27</small>
                            </div>
                        </div>
                        <!-- Usuario -->
                        <div class="d-flex mb-3">
                            <div class="p-3 rounded bg-primary text-white" style="max-width: 70%; margin-right: auto; word-wrap: break-word;">
                                <p class="mb-0"><strong>Fabian:</strong> Perfecto, quiero ordenar unas por favor.</p>
                                <small class="text-white-50">14:26</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white" style="border-top: 1px solid #ddd; padding: 10px;">
                        <div class="text-center mb-3">
                            <button class="btn btn-success btn-lg" style="width: 100%;">Hacer orden</button>
                        </div>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Escribe tu mensaje aquí..." style="border-radius: 20px;">
                            <button class="btn btn-primary ms-2" style="border-radius: 20px;">Enviar</button>
                        </div>
                    </div>
                </div>



                <!-- Panel derecho de inventario -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-white d-flex justify-content-between">
                            <h5 class="mb-0">Inventario</h5>
                        </div>
                        <div class="card-body">
                            <select class="form-select mb-3">
                                <option>Selecciona la bodega</option>
                                <option>Tibás</option>
                                <option>Pérez Zeledón</option>
                            </select>
                            <input type="text" class="form-control mb-3" placeholder="Nombre del producto, SKU..." />
                            <div class="form-check mb-3">
                            </div>
                            <h6>Productos más buscados</h6>
                            <div class="list-group">
                                <div class="d-flex align-items-center justify-content-between border p-2 mb-2">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/Productos/Producto1.jpg" alt="Medias Antideslizantes Blancas" style="width: 50px; height: auto;" class="me-3">
                                        <div>
                                            <p class="mb-1"><strong>Medias Antideslizantes Blancas</strong></p>
                                            <p class="mb-0">COD: 00008776 | Stock: 120</p>
                                        </div>
                                    </div>
                                    <button class="btn btn-sm btn-success">Detalles</button>
                                </div>

                                <div class="d-flex align-items-center justify-content-between border p-2 mb-2">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/Productos/Producto5.jpg" alt="Medias Antideslizantes Negras" style="width: 50px; height: auto;" class="me-3">
                                        <div>
                                            <p class="mb-1"><strong>Medias Antideslizantes Negras</strong></p>
                                            <p class="mb-0">COD: 00008776 | Stock: 120</p>
                                        </div>
                                    </div>
                                    <button class="btn btn-sm btn-success">Detalles</button>
                                </div>

                                <div class="d-flex align-items-center justify-content-between border p-2 mb-2">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/Productos/Producto4.jpg" alt="Medias Cortadas Negras" style="width: 50px; height: auto;" class="me-3">
                                        <div>
                                            <p class="mb-1"><strong>Medias Cortadas Negras</strong></p>
                                            <p class="mb-0">COD: 00008776 | Stock: 120</p>
                                        </div>
                                    </div>
                                    <button class="btn btn-sm btn-success">Detalles</button>
                                </div>

                                <div class="d-flex align-items-center justify-content-between border p-2 mb-2">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/Productos/Producto3.jpg" alt="Medias Antideslizantes 2.0" style="width: 50px; height: auto;" class="me-3">
                                        <div>
                                            <p class="mb-1"><strong>Medias Antideslizantes 2.0</strong></p>
                                            <p class="mb-0">COD: 00008776 | Stock: 120</p>
                                        </div>
                                    </div>
                                    <button class="btn btn-sm btn-success">Detalles</button>
                                </div>

                                <div class="d-flex align-items-center justify-content-between border p-2 mb-2">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/Productos/Producto2.jpg" alt="Medias Cortadas Azules" style="width: 50px; height: auto;" class="me-3">
                                        <div>
                                            <p class="mb-1"><strong>Medias Cortadas Azules</strong></p>
                                            <p class="mb-0">COD: 00008777 | Stock: 900</p>
                                        </div>
                                    </div>
                                    <button class="btn btn-sm btn-success">Detalles</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- JAVASCRIPT -->
        <script src="~/libs/jquery/jquery.min.js"></script>
        <script src="~/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/libs/metismenu/metisMenu.min.js"></script>
        <script src="~/libs/simplebar/simplebar.min.js"></script>
        <script src="~/libs/node-waves/waves.min.js"></script>

        <script src="~/js/app.js"></script>

        <!-- apexcharts -->
        <script src="~/libs/apexcharts/apexcharts.min.js"></script>

        <script src="~/js/pages/dashboard.init.js"></script>
</body>

</html>