@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Registrar Producto | Clivax - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Codebucks" name="author" />
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- Styles -->
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    <link rel="stylesheet" href="~/css/icons.css" />

</head>

<body>
    <div class="container mt-4">
        <!-- Encabezado principal -->
        <div class="text-center mb-4">
            <h1>Registrar Producto</h1>
            <p class="text-muted">Completa el formulario para agregar un nuevo producto al inventario</p>
        </div>

        <!-- Formulario de registro -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Datos del Producto</h5>
                <form action="/Producto/Registrar" method="post">
                    <div class="mb-3">
                        <label for="nombreProducto" class="form-label">Nombre del Producto</label>
                        <input type="text" class="form-control" id="nombreProducto" name="NombreProducto" placeholder="Ingrese el nombre del producto" required />
                    </div>
                    <div class="mb-3">
                        <label for="categoria" class="form-label">Categoría</label>
                        <select class="form-select" id="categoria" name="Categoria" required>
                            <option value="">Seleccione una categoría</option>
                            <option value="Medias Antideslizantes">Medias Antideslizantes</option>
                            <option value="Medias Cortadas">Medias Cortadas</option>
                            <option value="Medias de Compresión">Medias de Compresión</option>
                            <option value="Espinilleras">Espinilleras</option>
                            <option value="Portaespinilleras">Portaespinilleras</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="number" class="form-control" id="stock" name="Stock" placeholder="Ingrese la cantidad inicial de stock" required />
                    </div>
                    <div class="mb-3">
                        <label for="imagenProducto" class="form-label">Imagen del Producto</label>
                        <input type="file" class="form-control" id="imagenProducto" name="imagenProducto" accept="image/*" required>
                    </div>
                    <br />
                    <div class="d-flex justify-content-end">
                        <button type="reset" class="btn btn-secondary me-2">Limpiar</button>
                        <button type="submit" class="btn btn-primary">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="~/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/libs/simplebar/simplebar.min.js"></script>
    <script src="~/libs/node-waves/waves.min.js"></script>
    <script src="~/js/app.js"></script>

</body>
</html>
