@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <title>Pricing | Clivax - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Codebucks" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">


    <!-- dark layout js -->
    <script src="~/js/pages/layout.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    <link rel="stylesheet" href="~/css/icons.css" />

</head>

<body>
    <div class="container mt-4">
        <h1>Lista de Órdenes</h1>
        <p class="text-muted">Administra, edita o anula órdenes existentes.</p>

        <!-- Filtros -->
        <div class="row mb-4">
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="Buscar por cliente">
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option value="">Estado</option>
                    <option value="Confirmado">Confirmado</option>
                    <option value="Pendiente">Pendiente</option>
                    <option value="Anulado">Anulado</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option value="">Origen</option>
                    <option value="Redes Sociales">Redes Sociales</option>
                    <option value="Punto de Venta">Punto de Venta</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="date" class="form-control">
            </div>
        </div>

        <!-- Tabla de órdenes -->
        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th># Orden</th>
                            <th>Cliente</th>
                            <th>Estado</th>
                            <th>Fecha</th>
                            <th>Origen</th>
                            <th>Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>001</td>
                            <td>María López</td>
                            <td><span class="badge bg-success">Confirmado</span></td>
                            <td>01/12/2024</td>
                            <td>Redes Sociales</td>
                            <td>₡45,000</td>
                            <td>
                                <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#verOrdenModal">Ver</button>
                                <button class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#editarOrdenModal">Editar</button>
                                <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#anularOrdenModal">Anular</button>
                            </td>
                        </tr>
                        <tr>
                            <td>002</td>
                            <td>Venta Directa</td>
                            <td><span class="badge bg-warning">Pendiente</span></td>
                            <td>02/12/2024</td>
                            <td>Punto de Venta</td>
                            <td>₡15,000</td>
                            <td>
                                <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#verOrdenModal">Ver</button>
                                <button class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#editarOrdenModal">Editar</button>
                                <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#anularOrdenModal">Anular</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal para ver detalles de la orden -->
    <div class="modal fade" id="verOrdenModal" tabindex="-1" aria-labelledby="verOrdenModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="verOrdenModalLabel">Detalles de la Orden</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>ID de la Orden:</strong> 001</p>
                    <p><strong>Cliente:</strong> María López</p>
                    <p><strong>Estado:</strong> <span class="badge bg-success">Confirmado</span></p>
                    <p><strong>Fecha:</strong> 01/12/2024</p>
                    <p><strong>Canal de Venta:</strong> Redes Sociales</p>
                    <p><strong>Total:</strong> ₡45,000</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para editar detalles de la orden -->
    <div class="modal fade" id="editarOrdenModal" tabindex="-1" aria-labelledby="editarOrdenModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editarOrdenModalLabel">Editar Orden</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="cliente" class="form-label">Cliente</label>
                            <input type="text" class="form-control" id="cliente" value="María López">
                        </div>
                        <div class="mb-3">
                            <label for="canalVenta" class="form-label">Canal de Venta</label>
                            <select class="form-select" id="canalVenta">
                                <option value="Redes Sociales" selected>Redes Sociales</option>
                                <option value="Punto de Venta">Punto de Venta</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="total" class="form-label">Total</label>
                            <input type="number" class="form-control" id="total" value="45000">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para confirmar anulación -->
    <div class="modal fade" id="anularOrdenModal" tabindex="-1" aria-labelledby="anularOrdenModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="anularOrdenModalLabel">Confirmar Anulación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas anular la orden <strong>#001</strong>?</p>
                    <p><strong>Esta acción no se puede deshacer.</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger">Confirmar Anulación</button>
                </div>
            </div>
        </div>
    </div>
    

        <!-- JAVASCRIPT -->
        <script src="~/libs/jquery/jquery.min.js"></script>
        <script src="~/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/libs/metismenu/metisMenu.min.js"></script>
        <script src="~/libs/simplebar/simplebar.min.js"></script>
        <script src="~/libs/node-waves/waves.min.js"></script>

        <script src="~/js/app.js"></script>

        <!-- apexcharts -->
        <script src="~/libs/apexcharts/apexcharts.min.js"></script>

        <script src="~/js/pages/dashboard.init.js"></script>
</body>

</html>